{
    "name": "Dislexya",
    "version": "0.1.0",
    "description": "A reading extension to help dyslexic readers",
    "manifest_version": 3,
    "author": "Stephen Hunt",
    "action":{
        "default_title": "Dislexya",
        "default_icon": {
            "16": "icon_16.png",
            "32": "icon_32.png",
            "64": "icon_64.png"
        }
    },
    "permissions": ["scripting", "activeTab"],
    "background": {
        "service_worker": "background.js"
    }
}